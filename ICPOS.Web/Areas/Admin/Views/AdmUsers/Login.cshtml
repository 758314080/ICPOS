@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>登入 - layuiAdmin</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/Script/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/Script/layuiadmin/admin.css" rel="stylesheet" />
    <link href="~/Script/layuiadmin/login.css" rel="stylesheet" />
</head>
<body>

    <div class="layadmin-user-login layadmin-user-display-show" id="LAY-user-login">
        <div class="layadmin-user-login-main">
            <div class="layadmin-user-login-box layadmin-user-login-header">
                <h2>layuiAdmin</h2>
                <p>layui 官方出品的单页面后台管理模板系统</p>
            </div>
            <form class="layui-form" action="" lay-filter="example" method="post">
                <div class="layui-form-item">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-block">
                        <input type="text" name="loginname" lay-verify="loginname" autocomplete="off" placeholder="请输入用户名" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">密码</label>
                    <div class="layui-input-block">
                        <input type="password" name="password" lay-verify="pass" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit="" lay-filter="submit">立即提交</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="layui-trans layadmin-user-login-footer">
            <p>CL专用</p>
        </div>

    </div>
    <script src="~/Script/layui/layui.js"></script>
    <script>
        layui.use(['form'], function () {
            var $ = layui.jquery
                , form = layui.form
                , layer = layui.layer

            //自定义验证规则
            form.verify({
                loginname: function (value) {
                    if (value.length < 5) {
                        return '用户名不得低于6个字符';
                    }
                }
                , pass: [/(.+){6,12}$/, '密码必须6到12位']
            });

            //监控提交
            form.on('submit(submit)', function (data) {
                $.ajax({
                    type: 'Post',
                    url:'@Url.Action("Login","AdmLogin")',
                    data: data.field,
                    datatype: 'json',
                    success: function (res) {
                        var list = JSON.parse(res);
                        console.log(list);
                        if (list.Code == 1) {
                            //登入成功的提示与跳转
                            layer.msg('登入成功', {
                                offset: '15px'
                                , icon: 1
                                , time: 1000
                            }, function () {
                                location.href = '@Url.Action("Index", "AdmHome")'; //后台主页
                            });
                        } else {
                            layer.alert(list.Msg);
                        }
                    }
                });
                return false; //阻止表单跳转。如果需要表单跳转，去掉这段即可。
            });
        });
    </script>
</body>
</html>
